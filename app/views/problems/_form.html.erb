<%= simple_form_for(@problem) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :points %>
    <%= f.input :content %>
    <%= f.input :tests %>
    <%= f.input :initial_file %>
    <%= f.input :metadata %>
    <%= f.input :tags %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
